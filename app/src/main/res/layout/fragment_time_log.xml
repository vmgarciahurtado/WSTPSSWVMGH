<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="13dp"
    tools:context=".fragments.TimeLog">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:text="TIME LOG"
        android:textColor="#000"
        android:textSize="23dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_marginBottom="12dp"
            android:gravity="center">

            <Spinner
                android:id="@+id/spinnerFase"
                android:layout_width="108dp"
                android:layout_height="wrap_content"></Spinner>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnStartTimeLog"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginRight="113dp"
                android:background="@color/common_green"
                android:text="start"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/campoStartTimelog"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-93dp"
                android:layout_marginRight="150dp"
                android:background="@color/colorPrimary"
                android:text="START"
                android:textColor="#000"
                android:textSize="23dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="12dp"
            android:gravity="center">

            <EditText
                android:id="@+id/txtInterruptionTimelog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="INTERRUPTION"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="23dp" />
        </TableRow>

        <TableRow android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnStopTimeLog"
                android:layout_width="140dp"
                android:layout_height="42dp"
                android:layout_marginRight="113dp"
                android:background="@color/common_green"
                android:text="stop"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/campoStopTimelog"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-93dp"
                android:layout_marginRight="150dp"
                android:background="@color/colorPrimary"
                android:text="STOP"
                android:textColor="#000"
                android:textSize="23dp" />
        </TableRow>


        <TableRow
            android:layout_marginTop="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/campoDeltaTimelog"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:gravity="center"
                android:text="DELTA"
                android:textColor="#000"
                android:textSize="23dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="12dp"
            android:gravity="center">

            <EditText
                android:id="@+id/txtComentarioTimelog"
                android:layout_width="222dp"
                android:layout_height="52dp"
                android:layout_marginLeft="23dp"
                android:gravity="center"
                android:hint="COMMENTS"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="23dp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="40dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnRegistrarTimeLog"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@color/common_green"
                android:text="SAVE"
                android:textColor="#fff" />
        </TableRow>
    </TableLayout>

</LinearLayout>